<div class="containerClass">
  <div class="innercontainerClass">

    <h2>Login</h2>

    <form class="form login-form">
      <div class="form-group">
        <label style="float: left;" for="email-login">email:</label>
        <input style="width: 350px; float: right;" class="form-input" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label style="float: left;" for="password-login">password:</label>
        <input style="width: 350px; float: right;" class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Sign In</button>
      </div>
    </form>
  </div>
  <div class="innercontainerClass">
    <h2>Register</h2>
    <form class="form signup-form">
      <div class="form-group">
        <label style="float: left;" for="name-signup">name:</label>
        <input style="width: 350px; float: right;" class="form-input" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label style="float: left;" for="email-signup">email:</label>
        <input style="width: 350px; float: right;" class="form-input" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label style="float: left;" for="password-signup">password:</label>
        <input style="width: 350px; float: right;" class="form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Sign Up</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>